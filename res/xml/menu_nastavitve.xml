<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Display settings -->

    <PreferenceCategory android:title="Vreme" >

        <EditTextPreference
            android:key="KRAJ"
            android:summary="Vpiši domači kraj"
            android:title="Domači kraj" />
    </PreferenceCategory>

    <PreferenceCategory android:title="SOS" >

        <EditTextPreference
            android:key="TELEFONSKA"
            android:summary="obvezno vpiši!"
            android:title="SOS številka" >
        </EditTextPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="Navigacija" >

        <EditTextPreference
            android:key="DOMACI"
            android:summary="vpiši domači naslov"
            android:title="Domači naslov" >
        </EditTextPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="Internet" >

        <CheckBoxPreference
            android:key="INTERNET"
            android:summary="omogočim dostop do interneta?"
            android:title="Spletni dostop" >
        </CheckBoxPreference>

        <CheckBoxPreference
            android:enabled="true"
            android:key="DOSTOP_BUDILKA"
            android:summary="omogočim dostop do budilke?"
            android:title="Spletna budilka" >
        </CheckBoxPreference>

        <EditTextPreference
            android:dialogTitle="Ip:"
            android:key="IP"
            android:summary="Ip IIS strežnika"
            android:title="Ip" >
        </EditTextPreference>
    </PreferenceCategory>

    <PreferenceCategory android:title="Igra križci krožci" >

        <CheckBoxPreference
            android:enabled="true"
            android:key="IGRALEC"
            android:summary="ali želite da začne računalnik?"
            android:title="Začne računalnik" >
        </CheckBoxPreference>
    </PreferenceCategory>

</PreferenceScreen>