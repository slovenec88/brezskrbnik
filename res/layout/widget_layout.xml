<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dip"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvWidgetVremeKraj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

	<ImageView
	    android:id="@+id/imageWidgetVreme"
	    android:layout_width="120dp"
	    android:layout_height="120dp"
	    android:scaleType="centerInside"
	    android:src="@drawable/lib_cross"/>

	<LinearLayout
	    android:id="@+id/linearLayout2"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/tvWidgetVremeTemp"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="TextView" android:layout_gravity="center"/>

	    <TextView
	        android:id="@+id/tvWidgetVremeOpis"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="TextView" android:layout_gravity="center"/>
	</LinearLayout>

</LinearLayout>